{
  "root": true,
  "extends": [
    "@react-native-community",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react",
    "plugin:react-native-a11y/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier", "react-native-a11y"],
  "globals": {
    "console": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all",
      "tabWidth": 2,
      "semi": true
    }],
    "import/prefer-default-export": 0,
    "no-console": 0
  },
  "parser": "@typescript-eslint/parser"
}
